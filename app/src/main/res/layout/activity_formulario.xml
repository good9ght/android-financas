<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victor.financas.MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/colorAccent"
        android:background="?attr/colorPrimary">

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_valor"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:digits="0123456789"
            android:hint="Valor"
            android:inputType="numberDecimal"
            android:scrollHorizontally="true"
            android:singleLine="true" />



        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingEnd="10dp">

            <RadioButton
                android:id="@+id/radio_recebido"
                android:text="Recebido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/radio_pago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pago"/>

        </RadioGroup>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_descricao"
        android:layout_marginRight="10dp"
        android:hint="Descrição"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/text_datepicker"
        android:hint="Data"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageButton
        android:id="@+id/botao_salvar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_done_black_24dp"
        android:background="@drawable/imageview_selector"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        />

</LinearLayout>
